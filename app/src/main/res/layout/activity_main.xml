<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="100dp"
    android:orientation="vertical"
    tools:context="com.example.hnf.qoryummuhanifah_1202154357_modul4.MainActivity">

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:text="Study Case Modul 4"
    android:textAlignment="center"
    android:textSize="18dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="BACKGROUND TASK"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"/>

    <Button
        android:id="@+id/btnListNamaMahasiswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="List Nama Mahasiswa"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnCariGambar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:text="Cari Gambar"
        android:textAllCaps="false"/>


</LinearLayout>
